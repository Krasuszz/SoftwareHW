<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:background_element="#ededed"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="vertical_center"
        ohos:background_element="#f7f7f7"
        ohos:orientation="horizontal"
        ohos:padding="8vp">

        <TextField
            ohos:id="$+id:tf_content_history"
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:background_element="$graphic:textfield_bg"
            ohos:hint_color="#FFB0B0B0"
            ohos:padding="10vp"
            ohos:text_alignment="vertical_center"
            ohos:text_size="15fp"
            ohos:weight="1"/>



        <Button
            ohos:id="$+id:btn_search_history"
            ohos:height="35vp"
            ohos:width="70vp"
            ohos:background_element="$graphic:button_bg"
            ohos:left_margin="8vp"
            ohos:text="搜索"
            ohos:text_color="#fff"
            ohos:text_size="15fp"/>

    </DirectionalLayout>
    <ListContainer
        ohos:id="$+id:lc_list_history"
        ohos:height="0vp"
        ohos:width="match_parent"
        ohos:weight="1"
        ohos:layout_alignment="horizontal_center"
        />
</DirectionalLayout>