<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:background_element="#ededed"
    ohos:orientation="vertical">

    <ListContainer
        ohos:id="$+id:lc_list"
        ohos:height="0vp"
        ohos:width="match_parent"
        ohos:weight="1"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="vertical_center"
        ohos:background_element="#f7f7f7"
        ohos:orientation="horizontal"
        ohos:padding="8vp">

        <TextField
            ohos:id="$+id:tf_content"
            ohos:height="match_content"
            ohos:width="0vp"
            ohos:background_element="$graphic:textfield_bg"
            ohos:hint_color="#FFB0B0B0"
            ohos:padding="10vp"
            ohos:text_alignment="vertical_center"
            ohos:text_size="15fp"
            ohos:weight="1"/>

        <Button
            ohos:id="$+id:btn_more"
            ohos:height="35vp"
            ohos:width="35vp"
            ohos:text="+"
            ohos:background_element="$graphic:button_more_bg"
            ohos:text_color="#fff"
            ohos:text_size="40fp"
            ohos:bottom_padding="4vp"
            ohos:text_alignment="center"
            ohos:left_margin="8vp"
            />

        <Button
            ohos:id="$+id:btn_send"
            ohos:height="35vp"
            ohos:width="70vp"
            ohos:background_element="$graphic:button_bg"
            ohos:left_margin="8vp"
            ohos:text="发送"
            ohos:text_color="#fff"
            ohos:text_size="15fp"/>

    </DirectionalLayout>

</DirectionalLayout>